{
    parser: 'babel-eslint',
    extends: 'airbnb',
    plugins: [
        'react'
    ],
    rules: {
        'linebreak-style': 0,
        'no-tabs': 0,
        'indent': 0,
        'react/jsx-indent': ['error', 4],
        'react/jsx-filename-extension': 0,
        'react/prop-types': 0,
        'react/prefer-stateless-function': 0,
        'react/jsx-one-expression-per-line': 0,
        'react/no-string-refs': 0,
    },
    globals: {
        'localStorage': true,
        'window': true,
        'location': true,
        '__DEV__': true,
    },
    "env": {
        "browser": true,
        "node": true
    }
}
